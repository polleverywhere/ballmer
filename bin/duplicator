#!/usr/bin/env ruby

# This console is usefulf or interacting with a presentation, which makes debugging
# a little easier since this is mostly munging with files.

require 'power_point'

PowerPoint::Presentation.open(ARGV.shift).tap do |ppt|
  ARGV.shift.to_i.times do
    ppt.slides.push ppt.slides.first
  end
end.save